---
import AppLayout from '../components/AppLayout.tsx';
import { pluginPages } from '../data/pluginPages.ts';
---
<AppLayout>
  <nav class="space-y-2">
    {pluginPages.length === 0 ? (
      <p class="text-gray-600">No plugins available</p>
    ) : (
      <ul>
        {pluginPages.map((page) => (
          <li key={page}>
            <a href={`/plugins/${page}.html`} class="text-blue-500 hover:underline">
              {page}
            </a>
          </li>
        ))}
      </ul>
    )}
  </nav>
</AppLayout>