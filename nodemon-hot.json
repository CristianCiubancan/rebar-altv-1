{
    "verbose": false,
    "ext": "ts,tsx,astro,js,cjs",
    "watch": ["./src", "./scripts"],
    "ignore": [
        "resources/**",
        "webview/public/**",
        "webview/dist/**",
        "webview/src/pages/**",
        "webview/src/data/**",
        "webview/vite.config.*",
        "*/package.json",
        "*.mjs",
        "ignore*.ts",
        "autogen*.ts",
        "src/scratchpad"
    ],
    "events": {
        "exit": "node ./scripts/reload.js"
    },
    "delay": "2000"
}
