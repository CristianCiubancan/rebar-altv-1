{
    "verbose": false,
    "ext": "ts,tsx,astro,js,cjs",
    "watch": ["./src", "./webview", "./scripts"],
    "ignore": [
        "webview/pages/*",
        "webview/vite.config.*",
        "*/package.json",
        "*.mjs",
        "ignore*.ts",
        "autogen*.ts",
        "src/scratchpad",
        "webview/dist/*",
        "webview/dist",
        "webview/src/pages/plugins/**",
        "webview/src/data/**"
    ],
    "events": {
        "restart": "node ./scripts/restart.js"
    }
}
